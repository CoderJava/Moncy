<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".views.ui.activity.home.HomeActivity">

    <include
        android:id="@+id/toolbar_activity_home"
        layout="@layout/toolbar_main_layout"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint_layout_content_activity_home"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingEnd="@dimen/activity_horizontal_margin"
        android:paddingStart="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_activity_home">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/relative_layout_container_currency_now_activity_home"
                    android:layout_width="match_parent"
                    android:layout_height="128dp"
                    tools:ignore="UselessParent">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="128dp"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:layout_marginStart="@dimen/activity_horizontal_margin"
                        android:background="@color/colorWhiteDark" />

                    <ImageView
                        android:id="@+id/image_view_currency_now_activity_home"
                        android:layout_width="96dp"
                        android:layout_height="96dp"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/margin_24dp"
                        android:layout_marginRight="@dimen/margin_24dp"
                        android:background="@color/colorWhiteDark"
                        android:contentDescription="@string/image_view_currency_now"
                        android:elevation="16dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/img_currency_now"
                        tools:targetApi="lollipop" />

                    <ImageView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="78dp"
                        android:layout_marginStart="78dp"
                        android:background="@drawable/background_circle_white"
                        android:elevation="16dp"
                        android:padding="@dimen/margin_4dp"
                        android:src="@drawable/ic_keyboard_arrow_right_color_primary_24dp"
                        tools:targetApi="lollipop"
                        android:contentDescription="@string/image_view_icon_arrow_right" />

                    <TextView
                        android:id="@+id/text_view_title_currency_now_activity_home"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/activity_vertical_margin"
                        android:layout_toEndOf="@+id/image_view_currency_now_activity_home"
                        android:layout_toRightOf="@+id/image_view_currency_now_activity_home"
                        android:text="@string/currency_now"
                        android:textAllCaps="true"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/text_view_description_currency_now_activity_home"
                        android:layout_width="wrap_content"
                        android:layout_height="64dp"
                        android:layout_below="@+id/text_view_title_currency_now_activity_home"
                        android:layout_marginEnd="@dimen/activity_horizontal_margin"
                        android:layout_marginRight="@dimen/activity_horizontal_margin"
                        android:layout_marginTop="@dimen/margin_8dp"
                        android:layout_toEndOf="@+id/image_view_currency_now_activity_home"
                        android:layout_toRightOf="@+id/image_view_currency_now_activity_home"
                        android:ellipsize="end"
                        android:maxLines="3"
                        android:text="@string/description_currency_now"
                        android:textColor="@color/colorDarkerGray" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/relative_layout_container_country_currency_activity_home"
                    android:layout_width="match_parent"
                    android:layout_height="128dp"
                    android:layout_marginTop="@dimen/activity_vertical_margin">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="128dp"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:layout_marginStart="@dimen/activity_horizontal_margin"
                        android:background="@color/colorWhiteDark" />

                    <ImageView
                        android:id="@+id/image_view_country_currency_activity_home"
                        android:layout_width="96dp"
                        android:layout_height="96dp"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/margin_24dp"
                        android:layout_marginRight="@dimen/margin_24dp"
                        android:background="@color/colorWhiteDark"
                        android:contentDescription="@string/image_view_country_currency"
                        android:elevation="16dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/img_country_currency"
                        tools:targetApi="lollipop" />

                    <ImageView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="78dp"
                        android:layout_marginStart="78dp"
                        android:background="@drawable/background_circle_white"
                        android:elevation="16dp"
                        android:padding="@dimen/margin_4dp"
                        android:src="@drawable/ic_keyboard_arrow_right_color_primary_24dp"
                        tools:targetApi="lollipop"
                        android:contentDescription="@string/image_view_icon_arrow_right" />

                    <TextView
                        android:id="@+id/text_view_title_country_currency_activity_home"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/activity_vertical_margin"
                        android:layout_toEndOf="@+id/image_view_country_currency_activity_home"
                        android:layout_toRightOf="@+id/image_view_country_currency_activity_home"
                        android:text="@string/country_currency"
                        android:textAllCaps="true"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/text_view_description_country_currency_activity_home"
                        android:layout_width="wrap_content"
                        android:layout_height="64dp"
                        android:layout_below="@+id/text_view_title_country_currency_activity_home"
                        android:layout_marginEnd="@dimen/activity_horizontal_margin"
                        android:layout_marginRight="@dimen/activity_horizontal_margin"
                        android:layout_marginTop="@dimen/margin_8dp"
                        android:layout_toEndOf="@+id/image_view_country_currency_activity_home"
                        android:layout_toRightOf="@+id/image_view_country_currency_activity_home"
                        android:ellipsize="end"
                        android:maxLines="3"
                        android:text="@string/description_country_currency"
                        android:textColor="@color/colorDarkerGray" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/relative_layout_container_history_currency_activity_home"
                    android:layout_width="match_parent"
                    android:layout_height="128dp"
                    android:layout_marginTop="@dimen/activity_vertical_margin">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="128dp"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:layout_marginStart="@dimen/activity_horizontal_margin"
                        android:background="@color/colorWhiteDark" />

                    <ImageView
                        android:id="@+id/image_view_history_currency_activity_home"
                        android:layout_width="96dp"
                        android:layout_height="96dp"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/margin_24dp"
                        android:layout_marginRight="@dimen/margin_24dp"
                        android:background="@color/colorWhiteDark"
                        android:contentDescription="@string/image_view_country_currency"
                        android:elevation="16dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/img_history_currency"
                        tools:targetApi="lollipop" />

                    <ImageView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="78dp"
                        android:layout_marginStart="78dp"
                        android:background="@drawable/background_circle_white"
                        android:elevation="16dp"
                        android:padding="@dimen/margin_4dp"
                        android:src="@drawable/ic_keyboard_arrow_right_color_primary_24dp"
                        tools:targetApi="lollipop"
                        android:contentDescription="@string/image_view_icon_arrow_right" />

                    <TextView
                        android:id="@+id/text_view_title_history_currency_activity_home"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/activity_vertical_margin"
                        android:layout_toEndOf="@+id/image_view_history_currency_activity_home"
                        android:layout_toRightOf="@+id/image_view_history_currency_activity_home"
                        android:text="@string/history_currency"
                        android:textAllCaps="true"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/text_view_description_history_currency_activity_home"
                        android:layout_width="wrap_content"
                        android:layout_height="64dp"
                        android:layout_below="@+id/text_view_title_history_currency_activity_home"
                        android:layout_marginEnd="@dimen/activity_horizontal_margin"
                        android:layout_marginRight="@dimen/activity_horizontal_margin"
                        android:layout_marginTop="@dimen/margin_8dp"
                        android:layout_toEndOf="@+id/image_view_history_currency_activity_home"
                        android:layout_toRightOf="@+id/image_view_history_currency_activity_home"
                        android:ellipsize="end"
                        android:maxLines="3"
                        android:text="@string/description_history_currency"
                        android:textColor="@color/colorDarkerGray" />

                </RelativeLayout>

            </LinearLayout>

        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
