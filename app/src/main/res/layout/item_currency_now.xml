<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relative_layout_root_item_currency_now"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_white_rounded"
    android:paddingBottom="@dimen/margin_8dp"
    android:paddingLeft="@dimen/margin_8dp"
    android:paddingRight="@dimen/margin_8dp"
    android:paddingTop="@dimen/margin_8dp">

    <TextView
        android:id="@+id/text_view_rate_name_item_currency_now"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/text_view_rate_value_item_currency_now"
        android:layout_toStartOf="@+id/text_view_rate_value_item_currency_now"
        android:text="@string/idr"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/text_view_rate_value_item_currency_now"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:text="@string/_16050"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/text_view_tap_for_detail_item_currency_now"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_view_rate_name_item_currency_now"
        android:text="Tap for detail"
        android:textColor="@color/colorPrimaryDark" />

    <ProgressBar
        android:id="@+id/progress_bar_loading_item_currency_now"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:visibility="gone"
        android:layout_below="@+id/text_view_rate_name_item_currency_now" />

    <TextView
        android:id="@+id/text_view_reverse_rate_name_item_currency_now"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/text_view_rate_name_item_currency_now"
        android:layout_toLeftOf="@+id/text_view_reverse_rate_value_item_currency_now"
        android:layout_toStartOf="@+id/text_view_reverse_rate_value_item_currency_now"
        android:text="@string/idr_usd"
        android:textColor="@color/colorDarkerGray"
        android:visibility="gone" />

    <TextView
        android:id="@+id/text_view_reverse_rate_value_item_currency_now"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/text_view_rate_value_item_currency_now"
        android:text="@string/_0_00070556692"
        android:textColor="@color/colorDarkerGray"
        android:visibility="gone" />

</RelativeLayout>
