<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relative_layout_root_container_item_country"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_white_rounded"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <ImageView
        android:id="@+id/image_view_flag_item_country"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginEnd="@dimen/margin_24dp"
        android:layout_marginRight="@dimen/margin_24dp"
        android:scaleType="fitCenter"
        android:contentDescription="@string/image_view_flag_country" />

    <TextView
        android:id="@+id/text_view_name_item_country"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/image_view_flag_item_country"
        android:layout_toRightOf="@+id/image_view_flag_item_country"
        android:text="@string/value"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp" />

    <LinearLayout
        android:id="@+id/linear_layout_container_symbol_currency_item_country"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_view_name_item_country"
        android:layout_toEndOf="@+id/image_view_flag_item_country"
        android:layout_toRightOf="@+id/image_view_flag_item_country"
        android:orientation="horizontal"
        tools:ignore="UseCompoundDrawables">

        <ImageView
            android:id="@+id/image_view_symbol_currency_item_country"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="@dimen/margin_16dp"
            android:layout_marginRight="@dimen/margin_16dp"
            android:contentDescription="@string/image_view_symbol_currency"
            android:src="@drawable/ic_attach_money_darker_gray_24dp" />

        <TextView
            android:id="@+id/text_view_symbol_currency_item_country"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/value"
            android:textColor="@color/colorDarkerGray" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_layout_container_capital_city_item_country"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear_layout_container_symbol_currency_item_country"
        android:layout_toEndOf="@+id/image_view_flag_item_country"
        android:layout_toRightOf="@+id/image_view_flag_item_country"
        android:orientation="horizontal"
        tools:ignore="UseCompoundDrawables">

        <ImageView
            android:id="@+id/image_view_capital_city_item_country"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="@dimen/margin_16dp"
            android:layout_marginRight="@dimen/margin_16dp"
            android:contentDescription="@string/image_view_capital_city"
            android:src="@drawable/ic_location_city_darker_gray_24dp" />

        <TextView
            android:id="@+id/text_view_capital_city_item_country"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textColor="@color/colorDarkerGray"
            android:text="@string/value" />

    </LinearLayout>

</RelativeLayout>
